# Rules

rule proofing
  command = _diffbrowsers proof $fonts -o $out -pt $pt_size --filter-styles $
      "$filters"

# Build rules
build out/proof/Bold-Regular-Black: proofing
  fonts = /Users/v-cebotari/projects/onest/fonts/ttf/Onest-Light.ttf $
      /Users/v-cebotari/projects/onest/fonts/ttf/Onest-ExtraBold.ttf $
      /Users/v-cebotari/projects/onest/fonts/ttf/Onest-Medium.ttf $
      /Users/v-cebotari/projects/onest/fonts/ttf/Onest-Thin.ttf $
      /Users/v-cebotari/projects/onest/fonts/ttf/Onest-Bold.ttf $
      /Users/v-cebotari/projects/onest/fonts/ttf/Onest-Regular.ttf $
      /Users/v-cebotari/projects/onest/fonts/ttf/Onest-Black.ttf
  out = out/diffbrowsers
  pt_size = 20
  filters = Bold|Regular|Black
